<UserControl x:Class="D3DevBlog.WPF.MarkupExtension.App.EnumItemsSourceExtensionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:D3DevBlog.WPF.MarkupExtension.App"
             xmlns:me="clr-namespace:D3DevBlog.WPF.MarkupExtension;assembly=D3DevBlog.WPF.MarkupExtension"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid>
    <StackPanel>
      <DockPanel Width="200" Height="200" LastChildFill="True">
        <Border x:Name="CONTROL_Border" 
                Background="#3399FF" 
                Width="50" 
                Height="50" 
                DockPanel.Dock="{Binding ElementName=CONTROL_DockComboBox, Path=SelectedValue}" />
        <Border Width="20" Height="20" Background="#000000" />
      </DockPanel>

      <StackPanel Margin="10">
        <TextBlock Text="Dock:" FontSize="10" />
        <ComboBox x:Name="CONTROL_DockComboBox" 
                  IsEditable="True"
                  Margin="0 0 0 3"
                  ItemsSource="{me:EnumItemsSource EnumType={x:Type Dock}, AddEmptyValue=True}" />
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
