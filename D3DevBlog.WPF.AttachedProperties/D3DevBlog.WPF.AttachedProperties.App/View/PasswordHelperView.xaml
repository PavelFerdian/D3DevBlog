<UserControl x:Class="D3DevBlog.WPF.AttachedProperties.App.View.PasswordHelperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:D3DevBlog.WPF.AttachedProperties.App.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:at="clr-namespace:D3DevBlog.WPF.AttachedProperties;assembly=D3DevBlog.WPF.AttachedProperties">
  <Grid>
    <StackPanel Margin="5">
      <PasswordBox at:PasswordHelper.Attach="True" 
                   at:PasswordHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Padding="2"/>
      <TextBlock Text="{Binding Password, StringFormat={}Password: {0}}" Margin="0 10 0 0" />
    </StackPanel>
  </Grid>
</UserControl>
