<Window x:Class="D3DevBlog.WPF.MarkupExtension.Localization.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D3DevBlog.WPF.MarkupExtension.Localization.App"
        xmlns:lang="clr-namespace:D3DevBlog.WPF.MarkupExtension.Localization;assembly=D3DevBlog.WPF.MarkupExtension.Localization"
        xmlns:me="clr-namespace:D3DevBlog.WPF.MarkupExtension;assembly=D3DevBlog.WPF.MarkupExtension"
        xmlns:appControls="clr-namespace:D3DevBlog.WPF.MarkupExtension.Localization.App.Controls;assembly=D3DevBlog.WPF.MarkupExtension.Localization.App.Controls"
        mc:Ignorable="d"
        Title="{lang:Translate Title}" Height="350" Width="525">
  <Grid>
    <StackPanel Margin="10">
      <TextBlock Text="{lang:Translate Language}" FontSize="11" Margin="0 0 0 3" />
      <appControls:TestControl Margin="0 0 0 3" />
      <ComboBox ItemsSource="{me:EnumItemsSource EnumType={x:Type lang:Languages}}" 
                SelectedValue="{Binding Source={x:Static lang:LanguageManager.Instance}, Path=Language, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
  </Grid>
</Window>
